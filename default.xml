<?xml version='1.0' encoding='UTF-8'?>
<manifest>
  <remote name="mabnhdev" fetch="https://github.com/mabnhdev" revision="master"/>
  <remote name="extreme" fetch="ssh://git@giteng1" revision="master"/>
  <remote name="opx" fetch="https://github.com/open-switch" revision="master"/>
  <default remote="opx" sync-j="4"/>

  <!-- The follwing is a set of helper tools for maintaining OpenSwitch locally. -->
  <project path="opx-helpers" name="opx-helpers" remote="extreme"/>

  <!-- The following section is for platform-specific configuration files-->
  <project path="opx-platform-config" name="opx-platform-config"/>
  <project path="opx-platform-config-extreme-x870" name="opx-platform-config-extreme-x870" remote="mabnhdev"/>
  
  <!-- The following section is for infrastructure and libraries-->
  <project path="opx-common-utils" name="opx-common-utils"/>
  <project path="opx-cps" name="opx-cps" remote="mabnhdev"/>
  <project path="opx-db-sql" name="opx-db-sql"/>
  <project path="opx-logging" name="opx-logging"/>

  <!-- The following section is for API model definitions -->
  <project name="opx-base-model"/>

  <!-- The following section is for all networking related functions including ACLs, QoS, etc.. -->
  <project name="opx-nas-acl"/>
  <project name="opx-nas-common"/>
  <project name="opx-nas-daemon"/>
  <project name="opx-nas-interface"/>
  <project name="opx-nas-l2"/>
  <project name="opx-nas-l3"/>
  <project name="opx-nas-ndi"/>
  <project name="opx-nas-ndi-api"/>
  <project name="opx-nas-qos"/>

  <!-- The following section is for the linux adaption layer - essentially the hooks allowing linux to work with the rest of the system -->
  <project name="opx-nas-linux"/>

  <!-- SAI -->
  <project path="opx-sai-api" name="SAI" revision="dell.0.94+" />  
  <project name="opx-sai-common"/>
  <project name="opx-sai-common-utils"/>
  <project name="opx-sai-vm"/>

  <!-- The following section is for platform service configuration -->
  <project path="opx-pas" name="opx-pas"/>

  <!-- SDI -->
  <project path="opx-sdi-api" name="opx-sdi-api"/>
  <project path="opx-sdi-device-drivers" name="opx-sdi-device-drivers" remote="mabnhdev"/>
  <project path="opx-sdi-sys" name="opx-sdi-sys"/>
  <project path="opx-sdi-sys-vm" name="opx-sdi-sys-vm"/>
  <project path="opx-sdi-framework" name="opx-sdi-framework"/>

  <!-- SDI implementation for Mellanox platforms -->
  <project name="opx-mlnx-sdi-sys"/>

  <!-- The following section is for the remaining miscellaneous packages -->
  <project name="opx-tmpctl"/>
  
  <!-- The following section is for build tools and scripts -->
  <project name="opx-build"/>
</manifest>
